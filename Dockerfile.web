# Multi-stage build for Next.js web application
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Copy package files to web directory
COPY apps/web/package.json apps/web/package-lock.json* ./apps/web/
COPY package.json package-lock.json* ./

# Install dependencies in web directory
WORKDIR /app/apps/web
RUN npm install
WORKDIR /app

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app

# Copy dependencies from deps stage (web app dependencies)
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
# Copy root node_modules if exists
COPY --from=deps /app/node_modules ./node_modules

# Copy application code
COPY apps/web ./apps/web
COPY packages ./packages

# Set working directory to web app
WORKDIR /app/apps/web

# Build Next.js application
RUN npm run build

# Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built application
# Next.js standalone output structure (includes public assets and server.js)
# Standalone output is at /app/apps/web/.next/standalone/
# It contains: server.js, package.json, node_modules, and the app structure
COPY --from=builder /app/apps/web/.next/standalone ./
# Static files must be at .next/static relative to server.js location
COPY --from=builder /app/apps/web/.next/static ./.next/static

# Debug: List files to verify structure (remove in production)
# RUN ls -la /app && find /app -name "server.js" -type f

# Ensure server.js exists in the right location
# If standalone doesn't create server.js at root, adjust path

# Set correct permissions
RUN chown -R nextjs:nodejs /app

USER nextjs

EXPOSE 3001

ENV PORT=3001
ENV HOSTNAME="0.0.0.0"

# Start the application
# In Next.js standalone mode, server.js is at the root of standalone output
# After copying standalone to /app, server.js should be at /app/server.js
WORKDIR /app
CMD ["node", "server.js"]
